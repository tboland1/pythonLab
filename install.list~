#!/bin/bash 
wget -q -O - https://dl-ssl.google.com/linux/linux_signing_key.pub | sudo apt-key add -
sudo sh -c 'echo "deb [arch=amd64] http://dl.google.com/linux/chrome/deb/ stable main" >> /etc/apt/sources.list.d/google-chrome.list' 
sudo apt-get update -y
sudo apt-get install google-chrome-stable -y

sudo add-apt-repository ppa:smathot/cogscinl 
sudo apt-get update -y
sudo apt-get install zotero-standalone -y


sudo su
sudo apt-get install sshpass -y

sudo apt-get install synaptic -y
sudo apt-get install aptitude -y

sudo add-apt-repository ppa:gladky-anton/lammps 
sudo apt-get update -y
sudo apt-get install lammps-daily  -y
sudo apt-get install lammps-daily-doc -y

deb http://repository.spotify.com stable non-free
sudo apt-key adv --keyserver hkp://keyserver.ubuntu.com:80 --recv-keys BBEBDCB318AD50EC6865090613B00F1FD2C19886
sudo apt-get update -y
sudo apt-get install spotify-client -y

sudo apt-get install python3-pip python3-pyqt4
sudo python3 -m pip install pyzo --upgrade

sudo apt-get install glances -y
sudo add-apt-repository ppa:nemh/systemback 
sudo apt-get update -y
sudo apt-get install systemback -y

sudo apt-get install gnuplot -y
sudo apt-get install build-essential -y

sudo apt-get install debsums -y

sudo apt-get install gcc -y

sudo apt-get install vim -y

sudo apt-get install openssh-client -y
sudo apt-get install openssh-server -y
